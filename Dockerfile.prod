# Stage 1: Build Stage
FROM node:18-slim AS build

WORKDIR /app

COPY uachado-user/package.json /app/
RUN npm i

# EXPOSE 80

COPY uachado-user /app
RUN npm run build
# CMD npm run dev

FROM nginx:stable-alpine

COPY --from=build /app/dist /usr/share/nginx/html
EXPOSE 80

CMD ["nginx", "-g", "daemon off;"]